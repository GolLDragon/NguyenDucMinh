@model BigSchoolS.ViewModels.CoursesViewModel
@{
    ViewBag.Title = "Attending";
}

<h2>Đang tham dự</h2>
<ul class="course">
    @foreach (var course in Model.UpcommingCourse)
    {
        <li>
            <div class="date">
                <div class="month">
                    @course.DateTime.ToString("MM")
                </div>
                <div class="day">
                    @course.DateTime.ToString("dd")
                </div>
            </div>
            <div class="details">
                <span class="lecturer">
                    @course.Lecturer.Name
                </span>
                <span>
                    -
                </span>
                <span class="category">
                    @course.Category.Name
                </span>
                <br/>
                <a href="#" class="js-cancel-course" data-course-id="@course.Id">Hủy</a>
            </div>
        </li>
        
    }
</ul>

