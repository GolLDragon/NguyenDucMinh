@model IEnumerable<BigSchoolS.Models.ApplicationUser>
@{
    ViewBag.Title = "Following";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Đang theo dõi</h2>

<div class="row" style="margin-top: 10px;">
    <ul class="course">
        @foreach (var follow in Model)
        {
            <li>
                <div>
                    <span>
                        @follow.Name
                    </span>
                    <br />
                    <span>
                        @follow.UserName
                    </span>
                </div>
                <div class="action">
                    <a href="#" class="js-cancel-course" data-following-id="@follow.Id">Hủy</a>
                </div>
            </li>
        }
    </ul>
</div>


@section scripts
{
    <script>
        $(document).ready(function () {
            $(".js-cancel-course").click(function (e) {
                e.preventDefault();
                var link = $(e.target);
                bootbox.confirm("Bạn có chắc muốn hủy ?",
                    function () {
                        $.ajax({
                            url: "/api/followings" + link.attr("data-following-id"),
                            method: "DELETE"
                        })
                            .done(function () {
                                link.parents("li").fadeOut(function () {
                                    $(this).remove();
                                });
                            })
                            .fail(function () {
                                alert("Có gì đó sai!");
                            });
                    });
            });
        });
    </script>
}
